<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.victorychannel"
       name="Victory Channel"
       version="0.1.0"
       provider-name="Kenneth Copeland Ministries"
       extensionPointVersion="1.0.0">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>

  <extension point="xbmc.python.pluginsource" library="main.py">
    <provides>video</provides>
  </extension>

  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Streams Victory Channel content.</summary>
    <description lang="en_GB">Official add-on to browse and play Victory Channel programs.</description>
    <platform>all</platform>
    <license>MIT</license>
    <source>https://github.com/kennethwheeler/kodi-addon-victory-channel</source>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
